{
	"name": "Facebook Video Downloader",
	"version": "2.0",
	 "manifest_version": 2,
	"description": "Download videos from Facebook - Updated for modern HTML5 video support", 
	"background": {
		"persistent": true,
		"scripts": ["video.js", "fb.js"]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Download Facebook Videos"
	},
	"permissions": [
		"background",
		"downloads",
		"tabs",
		"webNavigation",
		"browsingData",
		"activeTab",
		"declarativeContent",
		"storage",
		"<all_urls>"
	]
}